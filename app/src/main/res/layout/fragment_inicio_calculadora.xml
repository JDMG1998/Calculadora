<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InicioCalculadora">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:text="PROGRAMACIÓN EN PLATAFORMAS MÓVILES I\nINGENIERIA DE SOFTWARE"
                android:textAlignment="center"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CALCULADORA BÁSICA"
                android:textAlignment="center"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="317dp"
                android:layout_margin="15dp"
                android:src="@drawable/logo_umb" />

            <TextView
                android:id="@+id/textDatos"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="Integrantes:\nPablo Yela.\nJuan David Pardo P.\nJuan David Mancipe Garcia."
                android:textAlignment="center"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btnInicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="80dp"
                android:text="Iniciar" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>